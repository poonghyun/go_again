<li class="review">
	<% if(review.get('business')) { %>

	  <% if(review.get('user').id === review.get('current_user_id')) { %>
	  	<h4>You said</h4>

		  <button class="add-pictures btn" data-review-id="<%= review.id %>">Add pictures to your review</button>
	  <% } else { %>
		  <h4><a href="#/user/<%= review.get('user')['id'] %>"><%= review.get('user')['username'] %></a> says</h4>
		<% } %>

	  <p>Updated at: <%= (new Date(review.get('updated_at'))).toDateString() %></p>

		<% if(review.get('stars') > 4.5) { %>
			<img class="star-review-image" src="/assets/5stars.png">
		<% } else if (review.get('stars') > 3.5) { %>
			<img class="star-review-image" src="/assets/4stars.png">
		<% } else if (review.get('stars') > 2.5) { %>
			<img class="star-review-image" src="/assets/3stars.png">
		<% } else if (review.get('stars') > 1.5) { %>
			<img class="star-review-image" src="/assets/2stars.png">
		<% } else { %>
			<img class="star-review-image" src="/assets/1star.png">
		<% } %>

	  <p>Content: <%= review.get('content') %></p>
	  <p>Go again? <b><%= review.get('go_again') ? "Yes" : "No" %></b></p>

	  <ul class="review-pic-list">
	  	<% if(review.photos()) { %>
	  		<% review.photos().each(function(photo) { %>
  				<a class="fancybox" href="<%= photo.get('fp_url') %>"><img class="review-pic" src="<%= photo.get('fp_url') %>"></a>
	  		<% }) %>
	  	<% } %>
	  </ul>
  <% } %>
</li>