<h3>How did you like <%= business.get('name') %>?</h3>
<form class="new-review" role="form">
  <input type="hidden"
         name="review[business_id]"
         value="<%= business.escape("id") %>">
  <div class="form-group">
    <label class="control-label" for="review-stars">Rating</label>
 	  <input id="review-stars" type="number" name="review[stars]" class="form-control">
  </div>

  <div class="form-group">
    <label class="control-label" for="review-content">Your thoughts</label>
    <textarea id="review-content" name="review[content]" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label>
    Go again?
    <input type="radio" name="review[go_again]" value=true>Yes
    <input type="radio" name="review[go_again]" value=false>No
    </label>
  </div>
</form>